<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/recipe_img_button"
            android:layout_width="202dp"
            android:layout_height="192dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteY="116dp" />

        <Button
            android:id="@+id/details_button"
            android:layout_width="203dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/details_button_string"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_img_button"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/recipe_title_rectangle"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/black_rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_img_button"
            app:layout_constraintEnd_toEndOf="@+id/recipe_img_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/recipe_img_button" />

        <TextView
            android:id="@+id/recipe_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Recipe Title"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_title_rectangle"
            app:layout_constraintEnd_toEndOf="@+id/recipe_title_rectangle"
            app:layout_constraintStart_toStartOf="@+id/recipe_title_rectangle"
            app:layout_constraintTop_toTopOf="@+id/recipe_title_rectangle" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
